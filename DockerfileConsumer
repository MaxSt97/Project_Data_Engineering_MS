FROM python:3.8

# Erstellen ein Arbeitsverzeichnis
WORKDIR /app

# Erstellen und aktivieren eine virtuelle Umgebung
RUN python -m venv venv
RUN . venv/bin/activate

# Installieren erforderliche Python-Module in der virtuellen Umgebung
RUN pip install kafka-python
RUN pip install psycopg2
RUN pip install confluent-kafka


# Kopieren das Python-Skript in das Arbeitsverzeichnis
COPY consumer.py .


CMD ["python", "consumer.py"]
