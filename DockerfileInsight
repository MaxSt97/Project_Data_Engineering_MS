FROM python:3.11
# Erstelle ein Arbeitsverzeichnis
WORKDIR /app

# Erstelle und aktiviere eine virtuelle Umgebung
RUN python -m venv venv
RUN . venv/bin/activate

# Installiere das Kafka Python-Modul
RUN pip install sqlalchemy
RUN pip install pandas
RUN pip install matplotlib
RUN pip install psycopg2-binary

# Kopiere das Python-Skript in das Arbeitsverzeichnis

COPY insight_plot.py .


CMD ["python", "insight_plot.py"]